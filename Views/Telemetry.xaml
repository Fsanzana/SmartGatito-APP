<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGatito.Views.Telemetry">
    <Grid ColumnDefinitions="*" RowDefinitions="20,auto"
        Padding="20">
        <Border 
            HeightRequest="40" 
            Stroke="#777777" 
            BackgroundColor="#777777" 
            StrokeShape="RoundRectangle 4,4,4,4">
            <FlexLayout AlignItems="Center" JustifyContent="SpaceBetween" Grid.Row="0">
                <Label Text="Hora" Margin="5"/>
                <Label Text="Evento" Margin="9,0"/>
            </FlexLayout>
        </Border>
        <ListView x:Name="miListView" Grid.Row="1" Margin="0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout AlignItems="Center" JustifyContent="SpaceBetween">
                            <Label Text="{Binding Time}" Margin="5"/>
                            <Label Text="{Binding EventName}" Margin="5"/>
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>